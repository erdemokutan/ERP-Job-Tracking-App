@model IEnumerable<JobTracking.Models.Staff.StaffInfo>

@{
    ViewBag.Title = "StaffCard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card {
        background-clip: padding-box;
        word-wrap: break-word;
        margin-bottom:20px;
    }
</style>

<h2>StaffCard</h2>

<section class="content">

    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                        <div class="card bg-light d-flex flex-fill">
                            <div class="card-header text-muted border-bottom-0">
                                @item.Department
                            </div>
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-9">

                                        <h2 class="lead"><b>@item.NameSurname</b></h2>
                                        <p class="text-muted text-lg"><b>About: </b> @item.Task </p>
                                        <ul class="ml-4 mb-0 fa-ul text-muted">
                                            <li class="small"><span class="fa-li"><i class="bx bx-envelope"></i></span> @item.Email</li>
                                            <li class="small"><span class="fa-li"><i class="bx bx-map"></i></span> @item.Address</li>
                                            <li class="small"><span class="fa-li"><i class="bx bx-phone"></i></span>@item.PhoneNumber</li>
                                        </ul>

                                    </div>
                                    <div class="col-3 text-center">
                                        <img src="@item.StaffPhoto" alt="user-avatar" class="rounded-circle style="width:50px; height:50px;">
                                    </div>

                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="mailto:@item.Email" class="btn btn-sm btn-warning">
                                        <i class="bx bx-envelope"></i> Mail
                                    </a>
                                    <a href="tel:@item.PhoneNumber" class="btn btn-sm btn-primary">
                                        <i class="bx bx-phone"></i> Call
                                    </a>
                                </div>
                                </div>
                            </div>
                    </div>
                }


            </div>
        </div>

        

    </div>

</section>
