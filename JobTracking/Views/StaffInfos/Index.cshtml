@model IEnumerable<JobTracking.Models.Staff.StaffInfo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.css" />

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/rg-1.0.0/datatables.min.js"></script>
<div class="card">
    <h5 class="card-header">Staff List</h5>
    <div class="card-body">


        <table id="showstaff" class="table" >
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Authorization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NameSurname)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Department)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Task)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.PhoneNumber)
                    </th>

                    <th>Options</th>
                    <th>
                        @Html.DisplayNameFor(model => model.PositionDetail)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Authorization)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameSurname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Department)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Task)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>

                        <td>

                            <a href="/StaffInfos/Edit/@item.StaffId" class="btn btn-primary "><span class="tf-icons bx bx-pencil "></span></a>
                            <a href="/StaffInfos/Details/@item.StaffId" class="btn btn-info "><span class="tf-icons bx bx-detail"></span></a>
                            <a href="/StaffInfos/Delete/@item.StaffId" class="btn btn-warning "><span class="tf-icons bx bx-trash"></span></a>
                            <a href="/StaffInfos/StaffActions/@item.StaffId" class="btn btn-dark "><span class="tf-icons bx bx-file"></span></a>


                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PositionDetail)
                        </td>
                    </tr>
                }
            </tbody>




        </table>


    </div>
</div>

<script>
    $('#showstaff').DataTable({
        language: {
            info: "Showing _START_ to_TOTAL_ Of - _END_ Entry/(ies)",
            infoEmpty: "There Are No Enrty/(ies) To Display",
            loadingRecords: "Loading Entry/(ies)",
            zeroRecords: "Empty Table",
            search: "Search:",
            infoFiltered: "Filtered From Total _MAX_ Entry/(ies)",
            buttons: {
                copyTitle: "Copied",
                copySuccess: "%d Rows Copied To The Clipboard",
                copy: "Copy",
                print: "Print",
            },

            paginate: {
                first: "First",
                previous: "Previous",
                next: "Next",
                last: "Last"
            },
        },
        dom: 'Bfrtip',
        buttons: [
            'copy', 'excel', 'pdf', 'print'
        ],
        responsive: true
    });
</script>


