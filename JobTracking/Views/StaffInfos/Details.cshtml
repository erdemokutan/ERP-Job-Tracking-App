                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">Marital Status</label>
                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.MaritalStatus)" readonly="">
                            
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">Position Detail</label>
                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.PositionDetail)" readonly="">
                            
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">Relative's Information</label>
                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.RelativesInformation)" readonly="">
                            
