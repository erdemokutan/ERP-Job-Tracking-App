                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.RelativesIdNumber)" readonly="">
                            
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">Relative's Phone Number</label>
                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.RelativesPhoneNumber)" readonly="">
                            
                        </div>

                        
                    </div>
                    <div class="mt-2">
                        <a href="/StaffInfos/Index/" type="submit" class="btn btn-primary me-2">Main Page</a>
                        
                    </div>
