                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">Identity Number</label>
                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.IdNumber)" readonly="">
                            
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="lastName" class="form-label">Birtdate</label>
                            <input class="form-control" type="text" id="exampleFormControlReadOnlyInput1" placeholder="@Html.DisplayFor(model => model.Birthdate)" readonly="">
                            
